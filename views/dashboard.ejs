<div class="widget wviolet">
    <div class="widget-head">
        <div class="pull-left">Server information</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>

  <div class="widget-content">
    <table class="table table-bordered "  id="server_status">
        <%- partial('server.ejs', {server: server}) %>
    </table>
</div>

<div class="widget wlightblue">
    <div class="widget-head">
        <div class="pull-left">Chat Log</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
                
    <div class="widget-content">
        <div class="padd">        
            <div class="error-log">
                <ul id='chat'>
                    <% for(var i=0; i<server.chat.length; i++) {%>
                        <li><%= server.chat[i].time %> [<%= server.chat[i].name %>]: <%= server.chat[i].message %></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <form class="form-horizontal" role="form" method="POST" onsubmit="javascript: return false;">
            <div class="form-group">
                <label class="col-lg-4 control-label">Say</label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" placeholder="Message" name="message">
                </div>
                <div class="col-lg-1">
                    <select class="form-control" name="popup">
                        <option value='0'>Notice</option>
                        <option value='1'>Popup</option>
                    </select>
                </div>
                <button type="button" class="btn btn-info" id="send_chat">Send</button>
            </div>
        </form>        
    </div>
</div>

