<div class="widget wgreen">
    <div class="widget-head">
        <div class="pull-left">Server admins</div>
        <div class="clearfix"></div>
    </div>

    <div class="widget-content">
        <table class="table table-bordered ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Roles</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<admins.length; i++) {%>
                    <tr>
                        <td><%= admins[i].id %></td>
                        <td><%= admins[i].username %></td>
                        <td><%= admins[i].password %></td>
                        <td><%= admins[i].roles %></td>
                        <td>
                            <button type="button" class="btn btn-danger formGenerate" data-page="/admin/del" data-params='{"id":"<%= admins[i].id%>", "_method":"delete"}' data-confirm="Do yo really wanna delete <%= admins[i].username %>?">Delete</button>
                            <a href="/admins/<%= admins[i].id %>" class="btn btn-info">Edit</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<div class="widget wblue">
    <div class="widget-head">
        <div class="pull-left">Add admin</div>
        <div class="clearfix"></div>
    </div>

    <div class="widget-content">
        <div class="padd">
            <form action="/admins" method="POST" class="form-horizontal" >
                <div class="form-group">
                    <label class="col-lg-4 control-label">Username</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="username">
                    </div>
                </div>                  
                <div class="form-group">
                    <label class="col-lg-4 control-label">Password</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" name="password">
                    </div>
                </div>   
                <div class="form-group">
                    <label class="col-lg-4 control-label">Permissions</label>
                    <div class="col-lg-8">
                        <% for(var i=0; i<roles.length; i++) { %>
                            <label ><%= roles[i] %> <input type="checkbox" name="roles[<%= roles[i]%>]"></label>
                        <% } %>
                    </div>
                </div>                 
                <hr>
                <div class="col-lg-offset-1 col-lg-9">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>    
            </form>
            <div class="clearfix"></div>
        </div>
    </div>
</div>